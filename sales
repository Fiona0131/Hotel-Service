

import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Sale {
	public static void main(String[] args) throws FileNotFoundException {
		
			try {
			//creat output text files for each service type
			PrintWriter dinner = new PrintWriter("Dinner.txt");
			PrintWriter lodging = new PrintWriter("Lodging.txt");
			PrintWriter conference = new PrintWriter("Conference.txt");
			
			//read input text file
			File inputFile = new File("sales.txt");
			Scanner in = new Scanner(inputFile);
			while(in.hasNextLine()) {
			
			String line = in.nextLine();
			String[] details =  line.split(";");
			
			
			//Dinner Output
			if(details[1].contentEquals("Dinner")) {
				dinner.println(details[0]+";"+details[1]+";"+details[2]+";"+details[3]);
				
			}
			//Lodging Output
			else if (details[1].contentEquals("Lodging")) {
				lodging.println(details[0]+";"+details[1]+";"+details[2]+";"+details[3]);
				
			}
			//Conference Output
			else if (details[1].contentEquals("Conference")) {
				conference.println(details[0]+";"+details[1]+";"+details[2]+";"+details[3]);
				
			}
			
		}//end while
		
		 in.close();
		
		 dinner.close();
		 lodging.close();
		 conference.close();
		 
		 System.out.println("\n Data has been processed and output has been written to respective files.... \n");
		}//end try
		catch(FileNotFoundException e) {
			System.out.println("File does not exist.");
		}
			
	}
}//end class

		
		
		
		
		
		
	
